<h1>Create a new event</h1>

<%= form_with model: @event do |form| %>
    <div>
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div>
    <div>
        <%= form.label :description %>
        <%= form.text_field :description %>
    </div>
    <div>
        <%= form.label :date %>
        <%= form.date_field :date %>
    </div>
    <%= form.submit "Create Event" %>
<% end %>